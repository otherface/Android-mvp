<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/menu_fragment_home"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:src="@drawable/main_home_logo_normal"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

    <ImageView
        android:id="@+id/menu_fragment_reward"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:src="@drawable/main_reward_logo_normal"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

    <ImageView
        android:id="@+id/menu_fragment_sms"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:src="@drawable/main_sms_logo_normal"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

    <ImageView
        android:id="@+id/menu_fragment_mine"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:src="@drawable/main_mine_logo_normal"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

</LinearLayout>
